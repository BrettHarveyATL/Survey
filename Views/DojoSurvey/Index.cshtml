@model Survey
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@200&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>
    <div class="container text-center">
        <form asp-action="Submit" asp-controller="DojoSurvey" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <select asp-for="Location" class="form-control">
                    <span asp-validation-for="Location" class="alert-danger"></span>
                    <option>San Jose</option>
                    <option>Atlanta</option>
                    <option>New York</option>
                    <option>Miami</option>
                    <option>Cleveland</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Language"></label>
                <select asp-for="Language" class="form-control">
                    <span asp-validation-for="Language" class="alert-danger"></span>
                    <option>C#</option>
                    <option>JS</option>
                    <option>Python</option>
                    <option>C++</option>
                    <option>Assembly</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Comment"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="alert-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
</body>

</html>